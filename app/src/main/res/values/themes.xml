<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blue" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blueVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orangeVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Delete button color. -->
        <item name="colorDelete">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Messages style -->
        <item name="messageSent">@color/blue</item>
        <item name="messageReceived">@color/grey</item>

        <item name="customBackground">@color/white</item>
        <item name="contactNumber">@color/dark_white</item>
    </style>

    <style name="Theme.Red" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/redVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blueVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Delete button color. -->
        <item name="colorDelete">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Messages style -->
        <item name="messageSent">@color/red</item>
        <item name="messageReceived">@color/grey</item>

        <item name="customBackground">@color/white</item>
        <item name="contactNumber">@color/dark_white</item>
    </style>

    <style name="Theme.Dark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/darkVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkBlue</item>
        <item name="colorSecondaryVariant">@color/darkBlueVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Delete button color. -->
        <item name="colorDelete">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background color for specific places. -->
        <item name="customBackground">@color/darkVariant</item>
        <!-- Alert Dialog style -->
        <item name="materialAlertDialogTheme">@style/myAlertDialog</item>
        <!-- Menu style -->
        <item name="popupMenuBackground">@color/dark</item>
        <!-- Messages style -->
        <item name="messageSent">@color/darkBlue</item>
        <item name="messageReceived">@color/light_grey</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/darkLight</item>
        <item name="android:textColorHint">@color/darkLight</item>

        <item name="contactNumber">@color/darkLight</item>
    </style>

    <!-- Styles to remove empty action bar in the Main activity -->
    <style name="Theme.Blue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Red.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- AlertDialog style -->
    <style name="myAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="buttonBarNeutralButtonStyle">@style/myButtonBarStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/myButtonBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/myButtonBarStyle</item>
    </style>
    <style name="myButtonBarStyle">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Blue.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Blue.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>